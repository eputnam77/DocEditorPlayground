{
  "name": "doceditorplayground",
  "version": "0.1.2",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "dev": "next dev",
    "dev:debug": "set DEBUG=* && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "npm run build && npx lighthouse http://localhost:3000 --output=html --output-path=./lighthouse.html"
  },
  "dependencies": {
    "next": "^15.3.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.3",
    "@tailwindcss/postcss": "npm:tailwindcss@^3.4.3",
    "postcss": "^8.4.34",
    "autoprefixer": "^10.4.18",
    "@tiptap/react": "^2.1.10",
    "@tiptap/starter-kit": "^2.1.10",
    "@tiptap/extension-blockquote": "^2.1.2",
    "@tiptap/extension-bold": "^2.1.2",
    "@tiptap/extension-bullet-list": "^2.1.2",
    "@tiptap/extension-code": "^2.1.2",
    "@tiptap/extension-code-block": "^2.1.2",
    "@tiptap/extension-document": "^2.1.2",
    "@tiptap/extension-dropcursor": "^2.1.2",
    "@tiptap/extension-gapcursor": "^2.1.2",
    "@tiptap/extension-hard-break": "^2.1.2",
    "@tiptap/extension-heading": "^2.1.2",
    "@tiptap/extension-history": "^2.1.2",
    "@tiptap/extension-horizontal-rule": "^2.1.2",
    "@tiptap/extension-italic": "^2.1.2",
    "@tiptap/extension-list-item": "^2.1.2",
    "@tiptap/extension-ordered-list": "^2.1.2",
    "@tiptap/extension-paragraph": "^2.1.2",
    "@tiptap/extension-strike": "^2.1.2",
    "@tiptap/extension-text": "^2.1.2",
    "@tiptap/extension-text-style": "^2.1.2",
    "@tiptap/extension-underline": "^2.1.2",
    "lucide-react": "^0.263.0",
    "yjs": "^13.6.10",
    "y-webrtc": "^10.6.6",
    "y-protocols": "^1.0.7"
  },
  "devDependencies": {
    "typescript": "^5.4.2",
    "@types/react": "^18.2.24",
    "@types/node": "^22.4.0",
    "eslint": "^9.31.0",
    "eslint-config-next": "^15.3.5",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "prettier": "^3.2.4",
    "vitest": "^1.4.1",
    "jsdom": "^24.0.0",
    "@testing-library/react": "^14.1.0",
    "@playwright/test": "^1.46.0",
    "@next/bundle-analyzer": "^13.5.0",
    "fast-check": "^4.5.0"
  }
}
