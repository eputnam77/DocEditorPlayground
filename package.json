    "@editorjs/list": "^1.7.1",
    "@editorjs/paragraph": "^2.11.3",

    "quill": "^2.0.2",

    "slate": "^0.117.0",
    "slate-react": "^0.117.0",

    "lexical": "^0.14.0",
